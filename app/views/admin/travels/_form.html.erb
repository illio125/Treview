<h1><%= title %></h1>

<div class="row">
  <div class="col-sm-6">
    <%= form_for travel, url: url do |f| %>
      <div class="form-group field">
        <%= f.label :name, 'Subject' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
