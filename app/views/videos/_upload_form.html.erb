
<nav class="navbar navbar-default navbar-fixed-bottom upload">
  <div class="container">
    <div class="row">
      <%= form_for Video.new() do |f| %>
        <div class="col-sm-10 col-md-8 col-sm-offset-1 col-md-offset-2">
            <%= f.hidden_field :uploader_id, value: user.id %>
            <%= f.hidden_field :travel_id, value: travel.id %>

          <div class="form-group field">
            <%= label_tag :subject  %>
            <%= text_field_tag :subject, travel.subject, class: 'form-control', disabled: true %>
          </div>

          <div class="form-group field">
            <%= f.label :youtube_url, "Already in YouTube?" %>
            <%= f.text_field :youtube_url, placeholder: 'Enter YouTube URL', class: 'form-control' %>
          </div>

          <!-- <span class='deco text-center'>OR</span> -->

          <div class="form-group text-center">
            <%= f.submit class: "btn btn-success" %>
          </div>


        </div>
      <% end %>
    </div>
  </div>
</nav>
